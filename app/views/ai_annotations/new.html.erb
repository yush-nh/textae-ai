<%= form_with model: @prompt, url: ai_annotations_path, class: "ai-annotation-form" do |f| %>
  <div class="text-field">
    <label>Text</label>
    <%= f.textarea :text, required: true, rows: 15, class: "text-input", placeholder: "Write or paste text here" %>
  </div>

  <div class="prompt-field">
    <label>Prompt</label>
    <%= f.textarea :prompt, required: true, rows: 3, class: "prompt-input", placeholder: "Order how to annotate the text" %>
  </div>

  <div class="submit-field">
    <%= f.submit "Annotate", disabled: true, class: "button" %>
  </div>
<% end %>

<%= javascript_import_module_tag 'initFormValidation' %>
